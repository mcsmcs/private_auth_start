extends ../layout

block content
	div(id="content")
		h1 Sign Up!

		form(action="/login/signup" method="post")
			div
				label Username
				input(type="text" name="username")
			div
				label Password
				input(type="password" name="password")
			div
				input(type="submit" value="Sign Up!")

		div(id="flash")= flash