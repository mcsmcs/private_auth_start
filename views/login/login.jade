extends ../layout

block content
	div(id="content")
		h1 Log In!


		form(action="/login" method="post")
			div
				label Username
				input(type="text" name="username")
			div
				label Password
				input(type="password" name="password")
			div
				input(type="submit" value="Log In!")
				a(href="/login/signup") Or Sign Up!
		
		div(id="flash")= flash